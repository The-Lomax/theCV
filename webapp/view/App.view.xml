<mvc:View 
	displayBlock="true" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="Krzysztof Beszterda Curriculum Vitae">
				<content>
					<IconTabBar 
						id="idTopLevelIconTabBar"
						class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter id="summary" text="{i18n>summaryTabName}">
								<MessageStrip
									type="Information"
									showIcon="true"
									text="Personal Profile"/>
								<Toolbar class="sapUiTinyMargin" width="100%" height="100%">
									<ToolbarSpacer class="sapUiTinyMargin"/>
									<VBox width="100%" class="sapUiSmallMargin">
										<Text wrapping ="true" class="sapUiTinyMargin" text="{i18n>personalProfileSummaryText}"/>
									</VBox>
								</Toolbar>
							</IconTabFilter>
							<IconTabFilter id="eduHistory" text="{i18n>educationTabName}">
								<MessageStrip
									type="Information"
									showIcon="true"
									text="Education History"/>
								<Toolbar>
									<ToolbarSpacer/>
									<VBox class="sapUiSmallMargin">
										<Text text="This is where the education history will go" />
									</VBox>
								</Toolbar>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>